<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>C&A Hellas @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @Scripts.Render("~/Scripts/myAdditionalJavaScript.js")
    <style>
        a {
            color: #197873;
        }
        a:hover {
            color: #197873;
        }
            a:active {
                background-color: #197873;
            }
    </style>
</head>
<body>
 <div class="navbar navbar-default   navbar-fixed-top">
    <div class="container">
        <div class="navbar-header  navbar-left">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="~/CA_Hellas_logo.PNG" style="width:125px;height:30px;top:10px;" /></a>
       </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav en">

                <li id="servicesEN">@Html.ActionLink("Services", "Services", "Home")</li>

                <li id="aboutEN">@Html.ActionLink("About us", "About", "Home")</li>

                <li id="contactEN">@Html.ActionLink("Contact", "Contact", "Home")</li>

            </ul>

            <ul class="nav navbar-nav gr">

                <li id="servicesGR">@Html.ActionLink("Υπηρεσίες", "Services", "Home")</li>

                <li id="aboutGR">@Html.ActionLink("Μάθετε για εμάς", "About", "Home")</li>

                <li id="contactGR">@Html.ActionLink("Επικοινωνία", "Contact", "Home")</li>

            </ul>

            <div class="nav navbar-nav navbar-right">
                &nbsp;&nbsp;&nbsp;
                <a><img src="~/Content/en1.png" onclick="setToEnglish();" style="width:20px;height:20px;top:10px;" /></a>
                <a><img src="~/Content/gr1.png" onclick="setToGreek();" style="width:20px;height:20px;top:10px;" /></a>
                <!--
                <button type="button" onclick="setToEnglish();">EN</button>
                <button type="button" onclick="setToGreek();">ΕΛ</button>
                -->
            </div>
        </div>
        
    </div>
</div>
    <div class="col-lg-12">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - C&A Hellas</p>
            </footer>
        </div>
    </div>

    <script type="text/javascript">
        hideDivIfNotCorrectLanguage();
        
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
   

    @RenderSection("scripts", required: false)
</body>
</html>
